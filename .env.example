# =============================================================================
# AIDE LLM API Configuration (State Farm Internal)
# =============================================================================

# Base URL for the AIDE API
AIDE_BASE_URL=https://aide-llm-api-qa-aide-llm-api-qa.apps.pcrosa01.redk8s.test.ic1.statefarm

# Use Case ID for AIDE API authentication (format: RITM******* or BUSN*******)
AIDE_USE_CASE_ID=RITM4953265

# SOLMA ID for logging metadata
AIDE_SOLMA_ID=432154

# =============================================================================
# Azure OAuth2 Client Credentials (for AIDE API authentication)
# =============================================================================

# Azure AD Tenant ID
AIDE_AZURE_TENANT_ID=your_azure_tenant_id_here

# Azure AD Application (Client) ID
AIDE_AZURE_CLIENT_ID=your_azure_client_id_here

# Azure AD Client Secret
AIDE_AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Azure AD Scope for token request
AIDE_AZURE_SCOPE=your_azure_scope_here

# =============================================================================
# Other AI Provider API Keys
# =============================================================================

# Google AI API Key (for Gemini models)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# OpenRouter API Key (for OpenRouter models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Direct provider access
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Authentication
# =============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your_auth_secret_here
AUTH_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE=prompttoissue

# =============================================================================
# GitLab OAuth (for MCP integration)
# =============================================================================

GITLAB_CLIENT_ID=your_gitlab_client_id_here
GITLAB_CLIENT_SECRET=your_gitlab_client_secret_here
GITLAB_REDIRECT_URI=http://localhost:3000/api/gitlab/callback

# Database
DATABASE_URL=./app.db

# Security (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI API Keys (configure at least one)
# Get these from respective providers:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
# - Google: https://console.cloud.google.com/
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key

# Local AI (Ollama) - optional
# Format: BASE_URL|MODEL_NAME or just "ollama" for defaults
OLLAMA_CONFIG=http://localhost:11434|mistral
# OLLAMA_CONFIG=ollama

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration - Frontend URL
FRONTEND_URL=http://localhost:5173 